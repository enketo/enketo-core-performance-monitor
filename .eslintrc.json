{
    "env": {
        "es6": true,
        "browser": false,
        "node": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "sourceType": "module",
        "ecmaVersion": 6
    },
    "rules": {
        "indent": [ "warn", 4, {
            "SwitchCase": 1
        } ],
        "no-unused-vars": [ "error", { "argsIgnorePattern": "next" } ],
        "linebreak-style": [ "error", "unix" ],
        "quotes": [ "error", "single" ],
        "semi": [ "error", "always" ],
        "no-console": 0
    }
}
